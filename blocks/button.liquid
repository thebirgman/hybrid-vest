
{% liquid
  assign visibility_class = ''
  if block.settings.visibility == 'desktop'
    assign visibility_class = 'hidden--mobile'
  elsif block.settings.visibility == 'mobile'
    assign visibility_class = 'hidden--desktop'
  endif
%}
<div class="{{ visibility_class }}" {{ block.shopify_attributes }}>
  {% if block.settings.enable_popup %}
    {% liquid
      assign has_section_reference = false
      if block.settings.popup_section_type == 'section_id' and block.settings.popup_section_id != blank
        assign has_section_reference = true
      elsif block.settings.popup_section_type == 'anchor' and block.settings.popup_section_anchor != blank
        assign has_section_reference = true
      elsif block.settings.popup_section_anchor != blank
        assign has_section_reference = true
      endif
    %}
    {% if has_section_reference %}
      {% render 'button-popup', block: block %}
    {% else %}
      {% comment %} Fallback to regular button if popup enabled but no section specified {% endcomment %}
      {% render 'button', link: block.settings.link, block: block %}
    {% endif %}
  {% else %}
    {% render 'button', link: block.settings.link, block: block %}
  {% endif %}
</div>

