<script>
  (function() {
    const cardId = '{{ block.id }}';
    const cardSelector = `[data-image-card-hover][data-block-id="${cardId}"]`;
    
    function initImageCardHover() {
      const card = document.querySelector(cardSelector);
      if (!card) return;

      // Find the parent group container (check both possible containers)
      const groupContainer = card.closest('.bento-grid-container');
      if (!groupContainer) return;

      // Check if this group is already initialized
      if (groupContainer.dataset.imageCardHoverInitialized === 'true') return;

      // Find all image cards in this group
      const allCards = Array.from(groupContainer.querySelectorAll('.image-card-block--hover-enabled'));
      if (allCards.length < 2) return; // Need at least 2 cards for interaction

      // Mark group as initialized and add class for CSS targeting
      groupContainer.dataset.imageCardHoverInitialized = 'true';
      groupContainer.classList.add('has-image-card-hover');

      // Find the scrolling container (mobile slider)
      const scrollingContainer = card.closest('.group-block-content--mobile-slider');
      const isMobileSlider = scrollingContainer !== null;
      const isMobile = window.innerWidth <= 768;

      // Find default active card or set first as active
      let lastActiveCard = allCards.find(c => c.classList.contains('image-card-block--default-active')) || allCards[0];
      
      // Initialize active state
      allCards.forEach(c => c.classList.remove('image-card-block--active'));
      lastActiveCard.classList.add('image-card-block--active');

      // Mobile slider: Simple scroll-based detection
      if (isMobileSlider && isMobile && scrollingContainer) {
        const updateActiveCard = () => {
          const containerRect = scrollingContainer.getBoundingClientRect();
          let mostVisibleCard = null;
          let maxVisibility = 0;

          allCards.forEach(card => {
            const rect = card.getBoundingClientRect();
            const left = Math.max(rect.left, containerRect.left);
            const right = Math.min(rect.right, containerRect.right);
            const visibleWidth = Math.max(0, right - left);
            const visibility = visibleWidth / rect.width;

            if (visibility > maxVisibility) {
              maxVisibility = visibility;
              mostVisibleCard = card;
            }
          });

          if (mostVisibleCard && maxVisibility > 0.3) {
            allCards.forEach(c => c.classList.remove('image-card-block--active'));
            mostVisibleCard.classList.add('image-card-block--active');
            lastActiveCard = mostVisibleCard;
          }
        };

        // Update on scroll (debounced) - attach to the actual scrolling container
        let scrollTimeout;
        scrollingContainer.addEventListener('scroll', () => {
          console.log('test scroll')
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(updateActiveCard, 50);
        }, { passive: true });

        // Initial check
        updateActiveCard();
      } else {
        // Desktop: Add hover listeners to all cards
        allCards.forEach(currentCard => {
          currentCard.addEventListener('mouseenter', function() {
            // Remove active from all cards
            allCards.forEach(c => c.classList.remove('image-card-block--active'));
            
            // Add active to hovered card
            currentCard.classList.add('image-card-block--active');
            lastActiveCard = currentCard;
          });

          currentCard.addEventListener('mouseleave', function() {
            // Keep the last active card active when leaving
            if (lastActiveCard) {
              allCards.forEach(c => c.classList.remove('image-card-block--active'));
              lastActiveCard.classList.add('image-card-block--active');
            }
          });
        });
      }
    }

    // Initialize on DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initImageCardHover);
    } else {
      initImageCardHover();
    }

    // Re-initialize if content is dynamically loaded
    if (typeof Shopify !== 'undefined' && Shopify.designMode) {
      document.addEventListener('shopify:section:load', function() {
        // Reset initialization flag for the group
        const card = document.querySelector(cardSelector);
        if (card) {
          const groupContainer = card.closest('.bento-grid-container');
          if (groupContainer) {
            groupContainer.dataset.imageCardHoverInitialized = 'false';
          }
        }
        setTimeout(initImageCardHover, 100);
      });
    }
  })();
</script>

