{% doc %}
  @prompt
    Create a countdown block that displays "X units left" with a dynamic number that counts down. The counter should reset to a configurable starting number every midnight EST. Include settings to customize the starting count, the text before/after the number, and styling options for the text color and size. The block should automatically decrement the count and persist it until the next midnight EST reset.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-countdown-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    margin: 0;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .ai-countdown-number-{{ ai_gen_id }} {
    font-weight: {{ block.settings.number_font_weight }};
    color: {{ block.settings.number_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-container-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }

    .ai-countdown-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.85 }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-countdown-container-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<countdown-block-{{ ai_gen_id }}
  class="ai-countdown-container-{{ ai_gen_id }}"
  data-starting-count="{{ block.settings.starting_count }}"
  data-decrement-interval="{{ block.settings.decrement_interval }}"
  {{ block.shopify_attributes }}
>
  <p class="ai-countdown-text-{{ ai_gen_id }}">
    {% if block.settings.text_before != blank %}
      <span>{{ block.settings.text_before }}</span>
    {% endif %}
    <span class="ai-countdown-number-{{ ai_gen_id }}" data-countdown-number>{{ block.settings.starting_count }}</span>
    {% if block.settings.text_after != blank %}
      <span>{{ block.settings.text_after }}</span>
    {% endif %}
  </p>
</countdown-block-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.storageKey = 'countdown_{{ ai_gen_id }}_data';
        this.startingCount = parseInt(this.dataset.startingCount) || 100;
        this.decrementInterval = parseInt(this.dataset.decrementInterval) * 60000 || 300000;
        this.numberElement = this.querySelector('[data-countdown-number]');
        this.currentCount = this.startingCount;
        this.intervalId = null;
      }

      connectedCallback() {
        this.initializeCount();
        this.startCountdown();
        this.scheduleMidnightReset();
      }

      disconnectedCallback() {
        if (this.intervalId) {
          clearInterval(this.intervalId);
        }
      }

      initializeCount() {
        const stored = this.getStoredData();
        const now = new Date();
        const estNow = this.convertToEST(now);
        const lastResetDate = stored ? new Date(stored.lastReset) : null;

        if (lastResetDate) {
          const lastResetEST = this.convertToEST(lastResetDate);
          const isSameDay = 
            estNow.getFullYear() === lastResetEST.getFullYear() &&
            estNow.getMonth() === lastResetEST.getMonth() &&
            estNow.getDate() === lastResetEST.getDate();

          if (isSameDay && stored.count !== undefined) {
            this.currentCount = Math.max(0, stored.count);
          } else {
            this.resetCount();
          }
        } else {
          this.resetCount();
        }

        this.updateDisplay();
      }

      convertToEST(date) {
        const utcDate = new Date(date.toLocaleString('en-US', { timeZone: 'UTC' }));
        const estDate = new Date(date.toLocaleString('en-US', { timeZone: 'America/New_York' }));
        return estDate;
      }

      getStoredData() {
        try {
          const data = localStorage.getItem(this.storageKey);
          return data ? JSON.parse(data) : null;
        } catch (e) {
          return null;
        }
      }

      saveData() {
        try {
          const data = {
            count: this.currentCount,
            lastReset: new Date().toISOString(),
            lastDecrement: new Date().toISOString()
          };
          localStorage.setItem(this.storageKey, JSON.stringify(data));
        } catch (e) {
          console.error('Failed to save countdown data:', e);
        }
      }

      resetCount() {
        this.currentCount = this.startingCount;
        this.saveData();
        this.updateDisplay();
      }

      decrementCount() {
        if (this.currentCount > 0) {
          this.currentCount--;
          this.saveData();
          this.updateDisplay();
        }
      }

      updateDisplay() {
        if (this.numberElement) {
          this.numberElement.textContent = this.currentCount;
        }
      }

      startCountdown() {
        this.intervalId = setInterval(() => {
          this.decrementCount();
        }, this.decrementInterval);
      }

      scheduleMidnightReset() {
        const checkMidnight = () => {
          const now = new Date();
          const estNow = this.convertToEST(now);
          const stored = this.getStoredData();

          if (stored && stored.lastReset) {
            const lastResetEST = this.convertToEST(new Date(stored.lastReset));
            const isSameDay = 
              estNow.getFullYear() === lastResetEST.getFullYear() &&
              estNow.getMonth() === lastResetEST.getMonth() &&
              estNow.getDate() === lastResetEST.getDate();

            if (!isSameDay) {
              this.resetCount();
            }
          }
        };

        setInterval(checkMidnight, 60000);
      }
    }

    customElements.define('countdown-block-{{ ai_gen_id }}', CountdownBlock{{ ai_gen_id }});
  })();
</script>

