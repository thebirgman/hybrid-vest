{% comment %}
  Trust Checklist Section
{% endcomment %}

<section class="trust-checklist-section">
  <div class="trust-checklist-inner">
    
    {% if section.settings.heading != blank %}
      <h2 class="trust-checklist-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <ul class="trust-checklist">
      {% for block in section.blocks %}
        <li class="trust-checklist-item" {{ block.shopify_attributes }}>
          <span class="trust-check-icon" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
              <path d="M16.75 5.8335L8.41667 14.1668L4.25 10.0002"
                stroke="currentColor"
                stroke-linecap="square"
                stroke-linejoin="round"/>
            </svg>
          </span>
          <span class="trust-check-text">
            {{ block.settings.text }}
          </span>
        </li>
      {% endfor %}
    </ul>

  </div>
</section>

<style>
/* ===== Trust Checklist Section ===== */

.trust-checklist-section {
  background: #000;
  padding: 60px 20px;
}

.trust-checklist-inner {
  max-width: 1100px;
  margin: 0 auto;
  border: 1px dashed rgba(255,255,255,0.3);
  padding: 40px 30px;
  text-align: center;
}

.trust-checklist-heading {
  color: #fff;
  margin-bottom: 30px;
}

/* List layout */
.trust-checklist {
  list-style: none;
  margin: 0;
  padding: 0;

  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px 60px;
}

.trust-checklist-item {
  display: flex;
  align-items: center;
  gap: 10px;
  color: #FFFFFFCC;
  font-size: 14px;
  white-space: nowrap;
}

.trust-check-icon {
  color: #fff;
  flex-shrink: 0;
}

/* Mobile */
@media (max-width: 768px) {
  .trust-checklist-inner {
    padding: 30px 10px;
    text-align: left;
  }

  .trust-checklist {
    flex-direction: column;
    gap: 14px;
    align-items: center;
  }

  .trust-checklist-item {
    white-space: normal;
  }
}
</style>

{% schema %}
{
  "name": "Trust Checklist",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "blank"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Checklist Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Your checklist item"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Checklist",
      "blocks": [
        { "type": "item", "settings": { "text": "365-Day Risk-Free Guarantee" } },
        { "type": "item", "settings": { "text": "1,000+ Five-Star Reviews" } },
        { "type": "item", "settings": { "text": "100,000+ Safer Homes Tested" } },
        { "type": "item", "settings": { "text": "Used by Families, Renters, and Professionals" } },
        { "type": "item", "settings": { "text": "Developed by a Lead Safety Expert" } }
      ]
    }
  ]
}
{% endschema %}
