
<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} timeline-section color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
  {% if request.visual_preview_mode %}
    data-shopify-visual-preview
  {% endif %}
>
  <div class="timeline-container page-width">
    {% comment %} Timeline images positioned absolutely {% endcomment %}
    {% if section.settings.image_1 != blank %}
      <div class="timeline-image timeline-image-1">
        {{
          section.settings.image_1
          | image_url: width: 800
          | image_tag:
            width: section.settings.image_1.width,
            widths: '400, 600, 800',
            height: section.settings.image_1.height,
            alt: section.settings.image_1.alt,
            class: 'timeline-image__img'
        }}
      </div>
    {% endif %}
    
    {% if section.settings.image_2 != blank %}
      <div class="timeline-image timeline-image-2">
        {{
          section.settings.image_2
          | image_url: width: 800
          | image_tag:
            width: section.settings.image_2.width,
            widths: '400, 600, 800',
            height: section.settings.image_2.height,
            alt: section.settings.image_2.alt,
            class: 'timeline-image__img'
        }}
      </div>
    {% endif %}
    
    {% if section.settings.image_3 != blank %}
      <div class="timeline-image timeline-image-3">
        {{
          section.settings.image_3
          | image_url: width: 800
          | image_tag:
            width: section.settings.image_3.width,
            widths: '400, 600, 800',
            height: section.settings.image_3.height,
            alt: section.settings.image_3.alt,
            class: 'timeline-image__img'
        }}
      </div>
    {% endif %}

    {% comment %} Section heading and subheading {% endcomment %}
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="timeline-header">
        {% if section.settings.heading != blank %}
          <h2 class="timeline-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="timeline-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% comment %} Timeline line {% endcomment %}
    <div class="timeline-line"></div>

    {% comment %} Timeline items {% endcomment %}
    <div class="timeline-items">
      {% for block in section.blocks %}
        {% liquid
          assign box_position = block.settings.box_position | default: 'left'
          if box_position == 'left'
            assign content_class = 'timeline-content--left'
            assign title_class = 'timeline-title--right'
          else
            assign content_class = 'timeline-content--right'
            assign title_class = 'timeline-title--left'
          endif
        %}
        <div class="timeline-item timeline-item--{{ box_position }}" {{ block.shopify_attributes }}>
          <div class="timeline-year">
            <span class="timeline-year__text">{{ block.settings.year }}</span>
          </div>
          
          <div class="timeline-content {{ content_class }}">
            <div class="timeline-content__text">
              <span class="timeline-content__year-mobile">{{ block.settings.year_title }}</span>
              <rte-formatter class="timeline-content__rich-text rte">{{ block.settings.box_text }}</rte-formatter>
            </div>
          </div>
          
          <div class="timeline-title {{ title_class }}">
            <div class="timeline-title__text">{{ block.settings.year_title }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .timeline-section {
    position: relative;
  }.timeline-container.page-width {
}

  .timeline-container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding-inline: var(--page-margin);
  }

  .timeline-line {
    position: absolute;
    left: 120px;
    top: 0;
    bottom: 0;
    width: 2px;
    border-left: 2px dashed rgb(var(--color-border-rgb));
    z-index: 1;
  }

  .timeline-items {
    position: relative;
    z-index: 2;
    padding-left: 200px;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 80px;
    display: block;
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  .timeline-year {
    position: absolute;
    left: -200px;
    top: 0;
    width: 120px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 20px;
  }

  .timeline-year__text {
    font-weight: 600;
    font-size: 1rem;
    color: rgb(var(--color-foreground));
    display: block;
    border: 2px dashed rgb(var(--color-border-rgb));
    padding: 8px 16px;
    border-radius: 4px;
    background: rgb(var(--color-background));
  }

  .timeline-content {
    background: rgba(var(--color-background-rgb), 0.95);
    padding: 24px 32px;
    border-radius: 8px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    max-width: 480px;
    position: relative;
  }

  .timeline-content--left {
    margin-left: 0;
    margin-right: auto;
  }

  .timeline-content--right {
    margin-left: auto;
    margin-right: 0;
  }

  .timeline-title {
    position: absolute;
    top: 0;
    max-width: 220px;
    padding-top: 8px;
  }

  .timeline-title--left {
    left: 0;
    right: auto;
    text-align: left;
    padding-right: 20px;
  }

  .timeline-title--right {
    right: 0;
    left: auto;
    text-align: right;
    padding-left: 20px;
  }

  .timeline-title__text {
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(var(--color-foreground-heading));
    line-height: 1.4;
  }

  .timeline-content__text {
    color: rgb(var(--color-foreground));
  }

  .timeline-content__year-mobile {
    display: none;
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 12px;
    color: rgb(var(--color-foreground-heading));
  }

  .timeline-content__rich-text {
    line-height: 1.6;
    font-size: 0.9375rem;
  }

  .timeline-content__rich-text p {
    margin: 0;
  }

  .timeline-content__rich-text p + p {
    margin-top: 12px;
  }

  .timeline-image {
    position: absolute;
    z-index: 0;
    width: 180px;
    height: auto;
    pointer-events: none;
  }

  .timeline-image__img {
    width: 100%;
    height: auto;
    display: block;
  }

  .timeline-image-1 {
    top: 8%;
    right: 0;
  }

  .timeline-image-2 {
    top: 45%;
    left: 0;
  }

  .timeline-image-3 {
    bottom: 0;
    right: 0;
  }

  @media screen and (max-width: 749px) {
    .timeline-section {
      padding-block: 40px;
    }

    .timeline-container {
      padding-inline: 20px;
    }

    .timeline-line {
      left: 30px;
    }

    .timeline-items {
      padding-left: 0;
    }

    .timeline-item {
      margin-bottom: 40px;
      padding-left: 60px;
    }

    .timeline-year {
      left: 0;
      width: 50px;
      padding-right: 10px;
    }

    .timeline-year__text {
      display: none;
    }

    .timeline-content {
      margin-left: 0 !important;
      margin-right: 0 !important;
      max-width: 100%;
      width: 100%;
      padding: 20px;
    }

    .timeline-title {
      position: static;
      max-width: 100%;
      padding-top: 0;
      margin-top: 12px;
      text-align: left !important;
    }

    .timeline-title__text {
      font-size: 0.8125rem;
    }

    .timeline-content__year-mobile {
      display: block;
    }

    .timeline-image {
      display: none;
    }
  }

